# xterm
super + Return
	xterm

# dmenu
super + p
	mnu

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# nnn
super + n
	xterm -e nnn -dHrx

# screenshot
{_,super + }Print
	grb {c,s}

# audio
XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

XF86Audio{_,Mic}Mute
	{ i=sink;   j=@DEFAULT_SINK@; \
	, i=source; j=alsa_input.pci-0000_00_1b.0.analog-stereo; } \
	pactl set-$i-mute $j toggle

XF86Audio{Next,Pause,Play,Prev}
	playerctl {next,pause,play,previous}

# webcam
XF86WebCam
	cam
